# Legal Bot Environment Configuration - PRODUCTION READY
# Copy this file to .env and customize the values for your environment

# ====================================
# APPLICATION SETTINGS
# ====================================

# Environment mode
NODE_ENV=production

# Server configuration
PORT=3001
HOST=0.0.0.0

# Application name and version
APP_NAME="Legal Bot v3"
APP_VERSION="3.0.0"

# ====================================
# SECURITY CONFIGURATION
# ====================================

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_ACCESS_SECRET=your-super-secret-access-key-minimum-32-characters-long-change-immediately
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long-change-immediately

# JWT Token Expiration
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# Session security
SESSION_SECRET=your-session-secret-change-in-production
SECURE_COOKIES=true

# ====================================
# GROQ AI CONFIGURATION
# ====================================

# Groq API settings
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-70b-8192
GROQ_MAX_TOKENS=1000
GROQ_TEMPERATURE=0.7

# ====================================
# WHATSAPP CONFIGURATION
# ====================================

# Bot Response Configuration
BOT_RESPONSE_DELAY_MIN=1000
BOT_RESPONSE_DELAY_MAX=5000
BOT_TYPING_DELAY_MIN=500
BOT_TYPING_DELAY_MAX=2000

# Anti-spam Configuration
BOT_CHAT_COOLDOWN_MS=6000

# WhatsApp Web settings
WHATSAPP_SESSION_PATH=./sessions
WHATSAPP_PUPPETEER_HEADLESS=true
WHATSAPP_RESTART_ON_AUTH_FAILURE=true

# Message settings
MESSAGE_RATE_LIMIT=30

# ====================================
# DATABASE CONFIGURATION
# ====================================

# Database file path
DATABASE_PATH=./data/legal-bot.db

# Database backup settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Database optimization
DB_CACHE_SIZE=64MB
DB_PAGE_SIZE=4096
DB_JOURNAL_MODE=WAL

# ====================================
# MONITORING & LOGGING
# ====================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE=./logs/application.log

# Monitoring settings
MONITORING_ENABLED=true
METRICS_RETENTION_HOURS=24
ALERT_EMAIL_ENABLED=false

# Health check thresholds
MEMORY_THRESHOLD=85
CPU_THRESHOLD=90
DISK_THRESHOLD=90
RESPONSE_TIME_THRESHOLD=5000

# ====================================
# RATE LIMITING & SECURITY
# ====================================

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security headers
SECURITY_HEADERS_ENABLED=true
HELMET_ENABLED=true

# ====================================
# BACKUP CONFIGURATION
# ====================================

# Local backup settings
BACKUP_DIR=./backups
BACKUP_COMPRESSION=true

# Cloud backup (Optional)
CLOUD_BACKUP_ENABLED=false
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-backup-bucket

# ====================================
# EMAIL CONFIGURATION (Optional)
# ====================================

# SMTP settings for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password

# Email notifications
EMAIL_FROM=noreply@legal-bot.com
EMAIL_ADMIN=admin@legal-bot.com

# ====================================
# CORS CONFIGURATION
# ====================================

# CORS settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ====================================
# SSL/TLS CONFIGURATION
# ====================================

# SSL settings (for production)
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# ====================================
# DEVELOPMENT SETTINGS
# ====================================

# Development mode settings
DEBUG=false
MOCK_WHATSAPP=false
MOCK_GROQ=false

# Hot reload
WATCH_FILES=false

# ====================================
# PRODUCTION OPTIMIZATIONS
# ====================================

# Clustering
CLUSTER_ENABLED=false
CLUSTER_WORKERS=auto

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# Static file caching
STATIC_CACHE_MAX_AGE=86400

# Request handling
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000

# ====================================
# LEGAL COMPLIANCE
# ====================================

# Data retention policies
DATA_RETENTION_DAYS=365
MESSAGE_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30

# Privacy settings
ANONYMIZE_PHONE_NUMBERS=true
ENCRYPT_SENSITIVE_DATA=true

# GDPR compliance
GDPR_ENABLED=true
DATA_EXPORT_ENABLED=true
RIGHT_TO_DELETION=true

# ====================================
# FEATURE FLAGS
# ====================================

# Feature toggles
FEATURE_MULTI_TENANCY=true
FEATURE_ANALYTICS=true
FEATURE_AUDIT_LOGGING=true

# ====================================
# EXTERNAL INTEGRATIONS
# ====================================

# Webhook settings
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000

# Third-party services
SENTRY_DSN=your-sentry-dsn
