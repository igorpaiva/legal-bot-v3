{
  "name": "whatsapp-bot-admin",
  "version": "1.0.0",
  "description": "WhatsApp bot with admin panel and Groq LLM integration",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm run dev",
